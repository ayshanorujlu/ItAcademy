<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>ByteWise Academy</title>
    <!-- plugins:css -->
   
    <link rel="stylesheet" href="~/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/images/favicon.png" />
    @RenderSection("Css",false)
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo mr-5" >
                    <img style="width:140px; height:55px;" src="~/images/solbyte.png" class="mr-2" alt="logo" />
                    </a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">
                   
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                            <i class="btn btn-danger ti-power-off text-primary"></i>
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                                <a class="dropdown-item" >
                                    <i class=" icon-head menu-icon"></i>
                                    <span class="menu-title">@User.Identity.Name</span>
                                </a>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                    <i class="ti-power-off text-primary"></i>
                                    Log out
                                </a>
                            </div>
                        }

                    </li>
                   
                </ul>

               
           </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_settings-panel.html -->
            <div class="theme-setting-wrapper">
                <div id="settings-trigger"><i class="ti-settings"></i></div>
                <div id="theme-settings" class="settings-panel">
                    <i class="settings-close ti-close"></i>
                    <p class="settings-heading">SIDEBAR SKINS</p>
                    <div class="sidebar-bg-options selected" id="sidebar-light-theme"><div class="img-ss rounded-circle bg-light border mr-3"></div>Light</div>
                    <div class="sidebar-bg-options" id="sidebar-dark-theme"><div class="img-ss rounded-circle bg-dark border mr-3"></div>Dark</div>
                    <p class="settings-heading mt-2">HEADER SKINS</p>
                    <div class="color-tiles mx-0 px-4">
                        <div class="tiles success"></div>
                        <div class="tiles warning"></div>
                        <div class="tiles danger"></div>
                        <div class="tiles info"></div>
                        <div class="tiles dark"></div>
                        <div class="tiles default"></div>
                      
                    </div>
                </div>
            </div>
            <!--vvvvvvv-->
            <div>
               
            </div>
            <!-- partial -->
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="DashBoard" asp-action="Index">
                            <i class="icon-grid menu-icon"></i>
                            <span class="menu-title">Home</span>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Teachers" asp-action="Index">
                            <i class="icon-head menu-icon"></i>
                            <span class="menu-title">Teachers</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employers" asp-action="Index">
                            <i class="icon-head menu-icon"></i>
                            <span class="menu-title">Employees</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Student" asp-action="Index">
                            <i class="icon-head menu-icon"></i>
                            <span class="menu-title">Students</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Courses" asp-action="Index">
                            <i class="icon-grid menu-icon"></i>
                            <span class="menu-title">Courses</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Groups" asp-action="Index">
                            <i class="icon-grid menu-icon"></i>
                            <span class="menu-title">Groups</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Positions" asp-action="Index">
                            <i class="icon-grid menu-icon"></i>
                            <span class="menu-title">Duties</span>
                        </a>
                    </li>
               

                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                            <i class="icon-layout menu-icon"></i>
                            <span class="menu-title">Checkout</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                              
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Budget" asp-action="Index">
                                        <i class="icon-grid menu-icon"></i>
                                        <span class="menu-title">Budget</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Benefit" asp-action="Index">
                                        <i class="icon-grid menu-icon"></i>
                                        <span class="menu-title">Incomes</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cost" asp-action="Index">
                                        <i class="icon-grid menu-icon"></i>
                                        <span class="menu-title">Expenses</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                     <li class="nav-item">
                    <a class="nav-link" asp-controller="Users" asp-action="Index">
                            <i class="icon-head menu-icon"></i>
                    <span class="menu-title">Accounts</span>
                    </a>
                    </li>
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
               
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
   
    <script src="~/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject --> @RenderSection("Scripts",false)
    <!-- Plugin js for this page -->
    <script src="~/vendors/chart.js/Chart.min.js"></script>
   

    <!-- End plugin js for this page -->
    <!-- inject:js --> 
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/template.js"></script>
    <script src="~/js/settings.js"></script>
    <script src="~/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/js/dashboard.js"></script>
    <script src="~/js/Chart.roundedBarCharts.js"></script>
    <script>

        $(document).on("click", "#subBtn", function () {
            $("#ErorrMes").empty()
            $.ajax({
                url: "/Home/Subscribe/",
                type: "get",
                data: {
                    "email": $("#subBtn").prev().val()
                },
                success: function (res) {
                    $("#ErorrMes").append(res)

                }
            });
        });
    </script>

    <!-- End custom js for this page-->
</body>

</html>

